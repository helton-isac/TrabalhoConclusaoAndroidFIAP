<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="editText">
        <item name="android:textColor">@color/editText</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Peppermint</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/wedgewood</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="button_large">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Peppermint</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/wedgewood</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">320dp</item>
    </style>
    <style name="editTextLogin">
        <item name="android:textColor">@color/editText</item>
    </style>
    <style name="button_google">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/red</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:letterSpacing">0.002</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="button_facebook">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/facebook</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:letterSpacing">0.002</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="cardCustom" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">240dp</item>
        <item name="cardBackgroundColor">@color/aqua_island</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:textColor">@color/aqua_island</item>
    </style>
    <style name="customCardTitle">
        <item name="android:textColor">@color/cello</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="customCardAuthor">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>
    <style name="customCardImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:scaleType">centerCrop</item>
"
    </style>
</resources>
